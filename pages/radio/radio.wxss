 .page {
  min-height: 100%;
  flex: 1;
  background-color: #fbf9fe;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  overflow: hidden;
} 

.page__hd {
  padding: 50rpx 50rpx 100rpx 50rpx;
  text-align: center;
}

.page__title {
  display: inline-block;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #aaa;
  border-bottom: 1px solid #ccc;
}

.page__desc {
  display: none;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #bbb;
}

.radio {
  display: block;
  margin-bottom: 20rpx;
}

.section {
  margin-bottom: 80rpx;
}

.section_gap {
  padding: 0 30rpx;
}
